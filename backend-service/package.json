{
  "name": "btc-yield-backend",
  "version": "1.0.0",
  "description": "Backend service for BTC Yield Protocol - manages loans, signatures, and Bitcoin transactions",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "anvil:start": "bash scripts/start-anvil.sh",
    "anvil:deploy": "bash scripts/deploy-contracts.sh",
    "dev:full": "concurrently \"npm run anvil:start\" \"npm run dev\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "postgres": "^3.4.3",
    "ethers": "^6.8.1",
    "drizzle-orm": "^0.29.1",
    "drizzle-kit": "^0.20.6",
    "drizzle-zod": "^0.5.1",
    "@types/pg": "^8.10.9",
    "zod": "^3.22.4",
    "uuid": "^9.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.11.0",
    "axios": "^1.6.2",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "typescript": "^5.3.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.6.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "bitcoin",
    "defi",
    "loans",
    "collateral",
    "api",
    "blockchain"
  ],
  "license": "MIT"
}
